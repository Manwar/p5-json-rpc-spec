desc 'install perl modules';
task install => sub {
};

desc 'test coverage';
task coverage => sub {
    sh q{perl Build.pl};
    sh q{./Build build};
    sh q{cover -test};
    sh q{open cover_db/coverage.html};
};

desc 'NYTProf';
task profile => sub {
    sh q{PERL5OPT=-d:NYTProf perl -Ilib t/02_specification.t};
    sh q{nytprofhtml --open};
};

task default => sub { sh q{daiku -T} };
